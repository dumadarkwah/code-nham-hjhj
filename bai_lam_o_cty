#include <iostream>
using namespace std;

int main() {
	int soKhach;
	cout << "Co bao nhieu khach? ";
	cin >> soKhach;

	if (soKhach < 0) {
		cout << "So khach phai co it nhat 1 nguoi";
		return 0;
	}

	//tao 1 chuoi moi co sokhach phan tu
	string* khach = new string[soKhach];
	cin.ignore();

	for (int i = 0; i < soKhach; i++) {
		cout << "Nhap ten cua khach hang " << i + 1 << " : ";
		getline(cin, khach[i]);
	}

	cout << "\nSo khach check in: \n";
	for (int i = 0; i < soKhach; i++) {
		cout << khach[i] << "\n";
	}

	delete[] khach;
	return 0;
}

#include <iostream>
using namespace std;

int main() {
	int soSV;
	cout << "Nhap so luong sinh vien: ";
	cin >> soSV;

	float* diem = new float[soSV];
	cin.ignore();

	for (int i = 0; i < soSV; i++) {
		cout << "Nhap diem sinh vien " << i + 1 << " : ";
		cin >> diem[i];
	}

	cout << "=====KET QUA=====" << endl;
	for (int i = 0; i < soSV;i++) {
		if (diem[i] < 5) {
			cout << "Sinh vien " << i + 1 << ": " << diem[i] << " - " << "TRUOT" << "\n";
		}
		else {
			cout << "Sinh vien " << i + 1 << ": " << diem[i] << " - " << "DO" <<"\n";
		}
	}
	delete[] diem;
	return 0;
}


#include <iostream>
using namespace std;

int main() {
	int sanPham;
	cout << "So luong san pham la: ";
	cin >> sanPham;

	string* ten = new string[sanPham];
	cin.ignore();

	for (int i = 0; i < sanPham; i++) {
		cout << "Ten cua san pham " << i + 1 << " la: ";
		getline(cin, ten[i]);
	}

	float* tien = new float[sanPham];
	for (int i = 0; i < sanPham; i++) {
		cout << "Gia tien cua san pham "<<i+1<<" la: ";
		cin >> tien[i];
	}


		int* soLuong = new int[sanPham];
	for (int i = 0; i < sanPham; i++) {
		cout << "So luong san pham " << ten[i] << " la: ";
		cin >> soLuong[i];
	}


	float* sum = new float[sanPham];
		for (int i = 0; i < sanPham; i++) {
			sum[i] = (tien[i] * soLuong[i]);
		}


		float tongKho = 0; 
		for (int i = 0; i < sanPham; i++) {
			tongKho += sum[i];
		}

		float maxTien = tien[0];
		int viTriMax = 0;
		for (int i = 0; i < sanPham; i++) {
			if (tien[i] > maxTien) {
				maxTien = tien[i];
				viTriMax = i;
			}
		}

		cout << "=====DANH SACH SAN PHAM=====\n";
	for (int i = 0; i < sanPham; i++) {
		cout << ten[i] << " - " << tien[i] << " - " << soLuong[i] << " " << sum[i] << "\n";
	}
	cout<<"Tong kho: "<<tongKho<<endl;
	cout << "San pham co gia cao nhat la: " << ten[viTriMax] << " voi gia la: " << tien[viTriMax] << endl; 

	delete[] ten;
	delete[] tien;
	delete[] soLuong;
	delete[] sum;

	return 0;
}


#include <iostream>
using namespace std;

int genID() {
	static int s_id = 0; //neu khong co static thi se nhu the nao
	++s_id;
	return s_id;
}

int main() {
	int nID1 = genID();
	string strName("Kteam");

	int nID2 = genID();
	string strName2("abc");

	int nID3 = genID();
	string strName3("hjhj");

	cout << nID1 << " : " + strName << endl;
	cout << nID2 << " : " + strName2 << endl;
	cout << nID3 << " : " + strName3 << endl;

	return 0;
}



#include <iostream>
#include <string>
using namespace std;

//bien toan cuc
string g_tenShop = "FPT Shop";
int g_maCuaHang = 1000;

int taoMaSp() {
	static int s_maSp = 100;
	++s_maSp;
	return s_maSp;
}

float tinhTong(float tien[], int soLuongSp) {
	float tong = 0;
	for (int i = 0; i < soLuongSp; i++) {
		tong += tien[i];
	}
	return tong;
}

int timSpMax(float gia[], int soLuongSp) {
	float maxGia = gia[0];
	int viTri = 0;
	for (int i = 0; i < soLuongSp; i++) {
		if (gia[i] > maxGia) {
			maxGia = gia[i];
				viTri = i;
		}
	}
	return viTri;
}

int main() {
	int soSp;
	cout << "======" << g_tenShop << "======" << endl;
	cout << "Ma cua hang: " << g_maCuaHang << endl;

	cout << "So luong san pham: ";
		cin >> soSp;


	if (soSp <= 0) {
		cout << "So luong san pham it nhat 1!" << endl;
		return 0;
	}
	//cấp phát bộ nhớ động
	string* tenSp = new string[soSp];
	float* giaSp = new float[soSp];
	int* soLuongTon = new int[soSp];
	int* maSp = new int[soSp];

	cin.ignore();

	//nhập thông tin sản phẩm

	for (int i = 0; i < soSp; i++) {
		cout << "San pham " << i + 1 << " : " << endl;
		
		cout << "Ten san pham: ";
		getline(cin, tenSp[i]);

		cout << "Gia ban: ";
		cin >> giaSp[i];

		cout << "So luong ton kho: ";
		cin >> soLuongTon[i];
		cin.ignore();

		maSp[i] = taoMaSp();

	}

	float* giaTriKho = new float[soSp];
	for (int i = 0; i < soSp; i++) {
		giaTriKho[i] = giaSp[i] * soLuongTon[i];
	}

	float tongGiaTriKho = tinhTong(giaTriKho, soSp);
	int viTriMax = timSpMax(giaSp, soSp);



	//in ket qua

	cout << "=====Danh Sach San Pham=====" << endl;
	for (int i = 0; i < soSp; i++) {
		cout << "Ten san pham " << i + 1 << " la: "<<maSp[i]<<" - "<< tenSp[i] << endl;
		cout << "Gia cua san pham " << i + 1 << " la: " << giaSp[i] << endl;
		cout << "So luong san pham " << i + 1 << soLuongTon[i] << endl;
		cout << "Gia tri ton cua san pham " << i + 1 << " la: " << giaTriKho[i] << endl;
		cout << "San pham co gia tri lon nhat la: " << tenSp[viTriMax]<<" - "<<"Gia: "<<giaSp[viTriMax] << endl;
	}

	delete[] tenSp;
	delete[] giaSp;
	delete[] soLuongTon;
	delete[] maSp;
	delete[] giaTriKho;

	return 0;
}


#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

#define ROW 100
#define COL 100

void nhapMang(int mt[][COL], int &m, int &n);
void xuatMang(int mt[][COL], int m, int n);

int main () {
    int mt[ROW][COL];
    int nRow, nCol;
    
    nhapMang(mt, nRow, nCol);
    xuatMang(mt, nRow, nCol);
    
    return 0;
    
}
void nhapMang(int mt[][COL], int &m, int &n) {
    
    //Khoi tao so ngau nhien
    srand(time(NULL));
    
    cout<<"Nhap so dong: ";
    cin>>m;
    cout<<"Nhap so cot: ";
    cin>>n;
    
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            mt[i][j] = rand() % 100;
        }
    }
    
}

void xuatMang(int mt[][COL], int m, int n) {
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            cout<< mt[i][j] <<"\t";
        }
        cout<<endl;
    } 
}
