/*Bài 1: kiểm tra số chẵn lẻ*/
#include <iostream>
using namespace std;

int main () {
    int n;
    cout<<"Nhap 1 so nguyen: ";
    cin>>n;
    
    if (n % 2 == 0) {
        cout<<n<<" la so chan";
    }
    else { cout<<n<<" la so le"; }
    return 0;
}


/*Bài 2: Tính giai thừa*/

#include <iostream>
using namespace std;

int main () {
    int n;
    long long giaiThua = 1; //Khởi tạo biến tích lũy = 1 vì 0! = 1
    
    //Nhập n 
    cout<<"Nhap so n: ";
    cin>>n;
    
    for (int i = 1; i <= n; i++) {
        giaiThua = giaiThua * i;
    }
    
    cout<<n<<"!="<<giaiThua<<endl;
    
    return 0;
}


/*Bài 3: Đảo ngược chuỗi*/

#include <iostream>
#include <string>
using namespace std;

int main () {
    string s;
    
    //Nhập chuỗi
    cout<<"Nhập chuỗi: ";
    getline(cin,s);
    
    //Đảo ngược chuỗi
    string daoNguoc = "";
    for (int i = s.length() - 1; i >= 0; i--) {
       daoNguoc = daoNguoc + s[i];
    }
    cout<<"Chuỗi đảo ngược: "<<daoNguoc<<endl;
    return 0;
}



#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main () {
    string s;
    
    //Nhập chuỗi
    cout<<"Nhập chuỗi: ";
    getline(cin,s);
    
    reverse(s.begin(), s.end());
   
    cout<<"Chuỗi đảo ngược: "<<s<<endl;
    return 0;
}
