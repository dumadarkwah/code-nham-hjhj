/*Bài 1: kiểm tra số chẵn lẻ*/
#include <iostream>
using namespace std;

int main () {
    int n;
    cout<<"Nhap 1 so nguyen: ";
    cin>>n;
    
    if (n % 2 == 0) {
        cout<<n<<" la so chan";
    }
    else { cout<<n<<" la so le"; }
    return 0;
}


/*Bài 2: Tính giai thừa*/

#include <iostream>
using namespace std;

int main () {
    int n;
    long long giaiThua = 1; //Khởi tạo biến tích lũy = 1 vì 0! = 1
    
    //Nhập n 
    cout<<"Nhap so n: ";
    cin>>n;
    
    for (int i = 1; i <= n; i++) {
        giaiThua = giaiThua * i;
    }
    
    cout<<n<<"!="<<giaiThua<<endl;
    
    return 0;
}


/*Bài 3: Đảo ngược chuỗi*/

#include <iostream>
#include <string>
using namespace std;

int main () {
    string s;
    
    //Nhập chuỗi
    cout<<"Nhập chuỗi: ";
    getline(cin,s);
    
    //Đảo ngược chuỗi
    string daoNguoc = "";
    for (int i = s.length() - 1; i >= 0; i--) {
       daoNguoc = daoNguoc + s[i];
    }
    cout<<"Chuỗi đảo ngược: "<<daoNguoc<<endl;
    return 0;
}



#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main () {
    string s;
    
    //Nhập chuỗi
    cout<<"Nhập chuỗi: ";
    getline(cin,s);
    
    reverse(s.begin(), s.end());
   
    cout<<"Chuỗi đảo ngược: "<<s<<endl;
    return 0;
}


#include <iostream>
using namespace  std;

int main () {
    int n, X, dem =0;
    cout<<"Nhap so phan tu: ";
    cin>>n;
    int a[100];
    for (int i = 0; i < n; i++) {
        cout<<"So thu "<<i+1<<" la: ";
        cin>>a[i];
    }
    
    cout<<"nhap so can dem: ";
    cin>>X;
    
    for (int i = 0; i < n; i++) {
        if (a[i] == X) {
            dem++;
        }
    }
    cout<<dem<<endl;
    return 0;
}

#include <iostream>
using namespace  std;

//tạo mảng số nguyên và số phần tử của mảng
int timSoLonThu2(int a[], int n) {
    if (n < 2){
        return -1;
    }
    
    //Giả định số lớn nhất và số lớn thứ 2
    int max1 = a[0];
    int max2 = a[1];
    
    //đảm bảo số lớn nhất luôn >= số lớn thứ 2 
    if (max1 < max2) {
        swap(max1, max2);
    }
    
    //Duyệt từ phần từ thứ 3
    for (int i = 2; i < n; i++) {
        if (a[i] > max1) {
            max2 = max1; 
            max1 = a[1];
        }
        else if (a[i] > max2 && a[i] != max1) {
            max2 = a[i];
        }
    }
    return max2;
    
}

int main () {
    int n;
    cout<<"Nhap so phan tu: ";
    cin>>n;
    
    int a[n]; 
    for(int i = 0; i < n; i++) {
        cout<<"So thu "<<i+1<<" la: ";
        cin>>a[i];
    }
    
    int ketQua = timSoLonThu2(a, n);
    
    if (ketQua == -1) {
        cout<<"Mang khong co so lon thu 2"<<endl;
    } else { cout<<"So lon thu 2 la: "<<ketQua<<endl; }
    
    
    return 0;
}


#include <iostream>
#include <string>
using namespace std;

bool kiemTraDoiXung(string s) {
    int left = 0;
    int right = s.length() - 1;
    
    while (left < right) {
        if (s[left] != s[right]) {
            return false;
        }
        left++;
        right--;
    }
    return true;
}
int main () {
    string s;
    
    cout<<"Nhap chuoi: ";
    getline (cin,s);
    
    if (kiemTraDoiXung(s)) {
       cout<<"True"<<endl;
    } else {cout<<"False"<<endl;}
    return 0;
}
