// gas_station.cpp
// Complexity: O(n)
// Input: n, then gas[i] line, then cost[i] line
// Example:
// 5
// 1 2 3 4 5
// 3 4 5 1 2
// Output: 3

#include <bits/stdc++.h>
using namespace std;

int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
    int n = gas.size();
    int total_tank = 0, curr_tank = 0, start = 0;
    for (int i = 0; i < n; ++i) {
        int diff = gas[i] - cost[i];
        total_tank += diff;
        curr_tank += diff;
        if (curr_tank < 0) {
            start = i + 1;
            curr_tank = 0;
        }
    }
    return (total_tank >= 0) ? start % n : -1;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n;
    if (!(cin >> n)) return 0;
    vector<int> gas(n), cost(n);
    for (int i = 0; i < n; ++i) cin >> gas[i];
    for (int i = 0; i < n; ++i) cin >> cost[i];
    cout << canCompleteCircuit(gas, cost) << "\n";
    return 0;
}


// round_robin_schedule.cpp
// Generate round-robin schedule for even n teams.
// Input: n (even), then team names (n strings)
// Output: rounds with pairings
// Example:
// 6
// A B C D E F

#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n;
    if (!(cin >> n)) return 0;
    vector<string> teams(n);
    for (int i = 0; i < n; ++i) cin >> teams[i];
    // If odd, add a bye (not needed here as n is even)
    int rounds = n - 1;
    vector<string> cur = teams;
    for (int r = 0; r < rounds; ++r) {
        cout << "Round " << r+1 << ":\n";
        for (int i = 0; i < n/2; ++i) {
            cout << cur[i] << " vs " << cur[n-1 - i] << "\n";
        }
        // rotate all but first
        string last = cur.back();
        for (int i = n-1; i > 1; --i) cur[i] = cur[i-1];
        cur[1] = last;
        cout << "\n";
    }
    return 0;
}

// ticket_manager.cpp
// Simple Ticket manager with file save/load.
// Commands: add, list, find <id>, remove <id>, save, load, exit
// Ticket saved as: id|name|trip|price

#include <bits/stdc++.h>
using namespace std;

struct Ticket {
    string id, name, trip;
    double price;
};

class TicketManager {
    vector<Ticket> data;
public:
    void add(const Ticket& t) { data.push_back(t); }
    void list() {
        for (auto &t : data) {
            cout << t.id << " | " << t.name << " | " << t.trip << " | " << t.price << "\n";
        }
    }
    void find(const string &id) {
        for (auto &t : data) if (t.id == id) {
            cout << t.id << " | " << t.name << " | " << t.trip << " | " << t.price << "\n";
            return;
        }
        cout << "Not found\n";
    }
    void removeId(const string &id) {
        auto it = remove_if(data.begin(), data.end(), [&](const Ticket& t){ return t.id == id; });
        if (it != data.end()) {
            data.erase(it, data.end());
            cout << "Removed\n";
        } else cout << "Not found\n";
    }
    void save(const string &fname) {
        ofstream fout(fname);
        for (auto &t : data) {
            fout << t.id << '|' << t.name << '|' << t.trip << '|' << t.price << '\n';
        }
        fout.close();
        cout << "Saved\n";
    }
    void load(const string &fname) {
        data.clear();
        ifstream fin(fname);
        string line;
        while (getline(fin, line)) {
            if (line.empty()) continue;
            stringstream ss(line);
            string id,name,trip,priceS;
            if (!getline(ss, id, '|')) continue;
            if (!getline(ss, name, '|')) continue;
            if (!getline(ss, trip, '|')) continue;
            if (!getline(ss, priceS)) continue;
            Ticket t; t.id=id; t.name=name; t.trip=trip; t.price=stod(priceS);
            data.push_back(t);
        }
        fin.close();
        cout << "Loaded\n";
    }
};

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    TicketManager mgr;
    string cmd;
    while (true) {
        cout << "cmd> ";
        if (!(cin >> cmd)) break;
