            mgr.add(t);
        } else if (cmd == "list") mgr.list();
        else if (cmd == "find") {
            string id; cin >> id; mgr.find(id);
        } else if (cmd == "remove") {
            string id; cin >> id; mgr.removeId(id);
        } else if (cmd == "save") {
            string f; cin >> f; mgr.save(f);
        } else if (cmd == "load") {
