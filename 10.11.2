// bst_advanced.cpp
// Supports insert, delete, inorder, postorder, findClosest.
// Example usage in main provided.

#include <bits/stdc++.h>
using namespace std;

struct Node {
    int val;
    Node* left;
    Node* right;
    Node(int v): val(v), left(nullptr), right(nullptr) {}
};

Node* insertNode(Node* root, int x) {
    if (!root) return new Node(x);
    if (x < root->val) root->left = insertNode(root->left, x);
    else if (x > root->val) root->right = insertNode(root->right, x);
    return root;
}

Node* findMin(Node* root) {
    while (root && root->left) root = root->left;
    return root;
}

Node* deleteNode(Node* root, int key) {
    if (!root) return nullptr;
    if (key < root->val) root->left = deleteNode(root->left, key);
    else if (key > root->val) root->right = deleteNode(root->right, key);
    else {
        if (!root->left) {
            Node* r = root->right; delete root; return r;
        } else if (!root->right) {
            Node* l = root->left; delete root; return l;
        } else {
            Node* mn = findMin(root->right);
            root->val = mn->val;
            root->right = deleteNode(root->right, mn->val);
        }
    }
    return root;
}

void inorder(Node* root) {
    if (!root) return;
    inorder(root->left);
    cout << root->val << ' ';
    inorder(root->right);
}

void postorder(Node* root) {
    if (!root) return;
    postorder(root->left);
    postorder(root->right);
    cout << root->val << ' ';
}

int findClosest(Node* root, int target) {
    int closest = root ? root->val : INT_MAX;
    Node* cur = root;
    while (cur) {
        if (abs(cur->val - target) < abs(closest - target)) closest = cur->val;
        if (target < cur->val) cur = cur->left;
        else cur = cur->right;
    }
    return closest;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    Node* root = nullptr;
    // Demo operations
    vector<int> vals = {20, 10, 5, 15, 30, 25, 35};
    for (int v : vals) root = insertNode(root, v);
    cout << "Inorder: "; inorder(root); cout << "\n";
    root = deleteNode(root, 10);
    cout << "Inorder after delete 10: "; inorder(root); cout << "\n";
    cout << "Postorder: "; postorder(root); cout << "\n";
    int target = 28;
    cout << "Closest to " << target << " is " << findClosest(root, target) << "\n";
    return 0;
}


// round_robin_sim.cpp
// Input format:
// n q
// pid arrival burst  (n lines)
// Example:
// 4 2
// P1 0 5
// P2 1 3
// P3 2 8
// P4 3 6

#include <bits/stdc++.h>
using namespace std;

struct Proc {
    string pid;
    int arrival;
    int burst;
    int remaining;
    int completion = -1;
    int firstResponse = -1;
};

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n, q;
    if (!(cin >> n >> q)) return 0;
    vector<Proc> procs(n);
    for (int i = 0; i < n; ++i) {
        cin >> procs[i].pid >> procs[i].arrival >> procs[i].burst;
        procs[i].remaining = procs[i].burst;
    }
    // sort by arrival for feeding queue
    vector<int> idx(n);
    iota(idx.begin(), idx.end(), 0);
    sort(idx.begin(), idx.end(), [&](int a, int b){
        if (procs[a].arrival != procs[b].arrival) return procs[a].arrival < procs[b].arrival;
        return a < b;
    });

    queue<int> qready;
    int time = 0, fed = 0, finished = 0;
    // push processes that arrive at time 0
    while (fed < n && procs[idx[fed]].arrival <= time) { qready.push(idx[fed]); fed++; }

    while (finished < n) {
        if (qready.empty()) {
            // fast forward to next arrival
            time = procs[idx[fed]].arrival;
            while (fed < n && procs[idx[fed]].arrival <= time) { qready.push(idx[fed]); fed++; }
            continue;
        }
        int i = qready.front(); qready.pop();
        if (procs[i].firstResponse == -1) procs[i].firstResponse = time;
        int exec = min(q, procs[i].remaining);
        procs[i].remaining -= exec;
        time += exec;
        // feed new arrivals during execution
        while (fed < n && procs[idx[fed]].arrival <= time) { qready.push(idx[fed]); fed++; }
        if (procs[i].remaining == 0) {
            procs[i].completion = time;
            finished++;
        } else qready.push(i);
    }

    double totalWT = 0, totalTAT = 0;
    cout << left << setw(6) << "PID" << setw(8) << "AT" << setw(8) << "BT" << setw(8) << "CT" << setw(8) << "TAT" << setw(8) << "WT" << "\n";
    for (auto &p : procs) {
        int tat = p.completion - p.arrival;
        int wt = tat - p.burst;
        totalTAT += tat;
        totalWT += wt;
        cout << left << setw(6) << p.pid << setw(8) << p.arrival << setw(8) << p.burst << setw(8) << p.completion << setw(8) << tat << setw(8) << wt << "\n";
    }
    cout << "Avg TAT: " << (totalTAT / n) << "\n";
    cout << "Avg WT: " << (totalWT / n) << "\n";
    return 0;
}
