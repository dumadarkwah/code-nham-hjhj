#include <bits/stdc++.h>
using namespace std;

struct ChiTieu {
    string ten;
    double soTien;
};

int main() {
    vector<ChiTieu> ds;
    int n;
    cout << "Nhap so khoan chi: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        ChiTieu ct;
        cout << "Ten khoan chi: ";
        cin.ignore();
        getline(cin, ct.ten);
        cout << "So tien: ";
        cin >> ct.soTien;
        ds.push_back(ct);
    }

    double tong = 0, maxChi = 0;
    string tenMax;
    for (auto &x : ds) {
        tong += x.soTien;
        if (x.soTien > maxChi) {
            maxChi = x.soTien;
            tenMax = x.ten;
        }
    }

    cout << "\nðŸ’° Tong chi tieu: " << tong;
    cout << "\nðŸ“ˆ Khoan chi lon nhat: " << tenMax << " - " << maxChi;
}
